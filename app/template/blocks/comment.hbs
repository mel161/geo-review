{{#if comments}}
  {{#each comments}}
  <li class="comment__item">
      <div class="comment__name">{{name}}</div>
      <div class="comment__place">{{place}}</div>
      <div class="comment__date">{{date}}</div>
      <div class="comment__text">{{text}}</div>
  </li>
  {{/each}}
{{else}}
  <li class="comment__item">
      <div class="comment__text">Отзывов пока нет...</div>
  </li>
{{/if}}
